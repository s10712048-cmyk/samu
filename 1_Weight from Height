# Linear Regression: Predict Weight from Height
import numpy as np
from sklearn.linear_model import LinearRegression

height = np.array([150, 155, 160, 165, 170, 175]).reshape(-1, 1)
weight = np.array([50, 53, 56, 60, 65, 70])

model = LinearRegression()
model.fit(height, weight)

print("Slope (m):", model.coef_[0])
print("Intercept (c):", model.intercept_)

new_height = np.array([[172]])
pred = model.predict(new_height)
print("Predicted Weight:", pred[0])
